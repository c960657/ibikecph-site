$().ready ->
	ui_height()

window.onresize = (event) ->
	ui_height()

ui_height = ->
	win = $(window)
	width = win.width()
	total = win.height()
	misc = 120 # header and maring
	search_area = $('#ui').outerHeight()
	ui = $('#ui_foldable').outerHeight()

	if $(window).width() > 767
		$('#instructions_div').removeClass('mobile').css
			'max-height': total-misc-304
			width: 390
	else
		$('#instructions_div').addClass('mobile').css
			'max-height': 1024
			height: total-40
			width: width+20