jQuery ->
	ibikecph.app.start()
	if !Modernizr.input.placeholder
		$('[placeholder]')
			.focus ->
				input = $(this)
				if input.val() is input.attr 'placeholder'
					input.val '';
					input.removeClass 'placeholder'
			.blur ->
				input = $(this)
				if input.val() is input.attr 'placeholder' or ''
					input.addClass('placeholder')
					input.val(input.attr('placeholder'))
			