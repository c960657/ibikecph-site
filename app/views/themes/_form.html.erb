<%= form_for @theme, :url => url, :html => {:multipart => true} do |f| %>
<%= errors_for( @theme ).html_safe %>

	<p>
		<%= f.label :title %>
		<%= chars_remaining %><br>
		<%= f.text_field :title, { "data-maxlength" => @theme.class::MAXLENGTH[:title] } %>
	</p>
	<p>
		<%= f.label :body %>
		<%= chars_remaining %><br>
		<%= f.text_area :body, { :rows => 10, "data-maxlength" => @theme.class::MAXLENGTH[:body] } %>
	</p>
	<p>
		<%= image_fields f, @theme %>
	</p>
	<p>
		<%= f.label :sticky %><br>
		<%= f.check_box :sticky %> <%=t '.make_sticky'%>
	</p>
	<p><%= f.submit t('.submit'), :class => :submit %></p>

<% end %>
