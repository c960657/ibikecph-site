<div id="topbar">


	<img src="/assets/ibikecph.png" alt="I BIKE CPH">
	<div class="label">
		<label>
			<p><%=t :from %></p>
			<input type="text" class="from"  placeholder='<%=t :from %>' title='<%=t :from %>'>
		</label>
	</div>
	<div class="label" class="last">
		<label>
			<p><%=t :to %></p>
			<input type="text" class="to" placeholder='<%=t :to %>' title='<%=t :to %>'>
		</label>
	</div>
	<div class="actions">
		<a class='permalink' href="#" ><%=t :generate_link %></a>	
		<a class='guide' href="#" ><%=t :route_description %></a>	
	</div>
	<div class="time">
		<p class='distance'><%=t :distance %>: <span class="count">23 km</span></p>
		<p class='duration'><%=t :duration %>:<span class="count">13 minutter</span></p>
		<p class='arrival'><%=t :arrival %>: <span class="count">13 minutter</span></p>
	</div>
</div>

<div id="viewport">
	<div id="map"></div>
</div>
