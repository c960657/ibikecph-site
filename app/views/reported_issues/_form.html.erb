<%= form_for @reported_issue, :url => url do |f| %>
<%= errors_for( @reported_issue ).html_safe %>

	<p>
		<%= f.label :route_segment %>
		<%= f.select :route_segment, %w(test test1 test2) %>
	</p>
	<p>
		<%= f.label :error_type %>
		<%= f.text_field :error_type, { :rows => 1, :class => 'text_input' }%>
	</p>
	<p>
		<%= f.label :comment %>
		<%= f.text_area :comment, { :rows => 10, :class => 'text_input' } %>
	</p>
	
	<p class="submits">
		<%= f.submit %>
	</p>

<% end %>