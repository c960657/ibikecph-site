<div class="dialog g4">
<h1><%=t '.title' %></h1>
<%= form_for current_user, :url => emails_path, :method => :post do |f| %>
<%= errors_for( current_user ).html_safe %>
<%= fields_for @auth do |auth| %>
  <p>
    <%= auth.label t('.new_email') %><br>
    <%= auth.text_field :uid %>
  </p>
  <p>
    <%= auth.label t('.new_email_confirmation')%><br>
    <%= auth.text_field :uid_confirmation %><br>
  </p>
<% end %>
<p>
  <%= submit_tag t('.submit'), :class => :submit %>
</p>
<% end %>
</div>