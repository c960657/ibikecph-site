<h6>Reset Password</h6>
<p>Please enter your email, and we'll send you instructions for resetting your password.</p>
<%= form_tag password_resets_path, :method => :post do %>
<p>
	<%= label_tag :email %><br>
	<%= text_field_tag :email %>
</p>
<p>
	<%= submit_tag "Send Instructions", :class => :submit %>
</p>
<% end %>

