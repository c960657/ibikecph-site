<div class="dialog g4">
  <h1><%=t '.title' %></h1>
  <p><%=t '.body', :user => current_user.email_address %></p>

  <%= form_tag password_resets_path, :method => :post do %>
  <p>
    <%= label_tag :email %><br>
    <%= select_tag :email, options_for_select(@emails) %>
  </p>
  <p>
    <%= submit_tag t('.submit'), :class => :submit %>
  </p>
  <% end %>
</div>