<div class="gr">
  <div class="g4">
    <%= render 'issues/sidebar' %>
  </div>
  <div class="g8 ge">
    <h1><%=t '.title' %></h1>
    <%= simple_format t('.body') %>

    <% if current_user %>
      <% if current_user.tester? %>
        <p class="note"><%=t '.is_tester' %></p>
      <% else %>
        <p class="note"><%=t '.is_not_tester' %></p>
      <% end %>
    <% end %>
    <%= render 'membership' %>
    <%= render 'testers' %>
  </div>
</div>