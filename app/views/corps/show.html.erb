<div class="gr">
	<div class="g4">
		<%= render 'membership' %>
	</div>
	<div class="g8 ge">
		<%= link_to t('edit'), [:edit,:account], :class => "button righty" if current_user == @user %>

		<h1><%= @user.name %><%= " (#{t('you')})" if current_user == @user %></h1>

		<div>
			<%= image_tag @user.image.g3.url, :class => 'g3 square lefty' %>
			<% if @user.about %>
				<%= simple_format(@user.about) %>
			<% end %>
		</div>
		<div class="clear"></div>
		<% if @issues.any? %>
			<br>
			<%= render :partial => 'issues/issues', :locals => { :title => t('.issues') } %>
		<% end %>
	</div>
</div>