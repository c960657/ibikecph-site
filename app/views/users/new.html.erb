<div class="dialog g8">
<h1>Sign Up</h1>
<p>Create your free I Bike Cph account.</p>
<br>
<%= form_for @user do |f| %>
<%= errors_for( @user ).html_safe %>
<p>
	<%= f.label :name %><br>
	<%= f.text_field :name, :tabindex => 1 %>
</p>
<%= fields_for @email do |email| %>
	<div class="gr">
		<div class="g4">
			<p>
				<%= email.label :uid %><br>
				<%= email.text_field :uid, :tabindex => 2 %><br>
			</p>
		</div>
		<div class="g4 ge">
			<p>
				<%= f.label :password %><br>
				<%= f.password_field :password, :tabindex => 4 %>
			</p>
		</div>
	</div>
	<div class="gr">
		<div class="g4">
			<p>
				<%= email.label :uid_confirmation %><br>
				<%= email.text_field :uid_confirmation, :tabindex => 3 %><br>
			</p>
		</div>
		<div class="g4 ge">
			<p>
				<%= f.label :password_confirmation %><br>
				<%= f.password_field :password_confirmation, :tabindex => 5 %><br>
			</p>
		</div>
	</div>
<% end %>
<p>
	<%= submit_tag "Create Account", :class => :submit %>
	<span class="note">Already have an account? <%= link_to "Login", login_path %></span>
</p>
<% end %>
<div class="oauth_providers">
	<%= render :partial => 'sessions/login_providers', :locals => { :title => '..or log in with' } %>
</div>
</div>