<% if @tags.any? %>
<div class="sidebar">
	<h2><%=t 'tags' %></h2>
	<div class="tag_cloud">
		<% tag_cloud(@tags, [:tag1,:tag2,:tag3,:tag4]) do |tag, css_class| %>
			<% css_class = "#{css_class} on" if params[:tag]==tag.name %>
			<%= link_to tag.name, { :action => :tag, :tag => tag.name }, :class => css_class %>
		<% end %>
	</div></div>
<% end %>