<div class="gr">
	<div class="g8">
		<%= render 'issues/editing' %>
		<h1><%= @issue.title %></h1>
		<%= auto_html_blog @issue.body, {} %>
		<%= render 'tag_cloud' %>
		<%= render 'labels' %>
		<br>
		
		<% if @issue.user %>
			<%= link_to profile_image(@issue.user), @issue.user, :class => "avatar lefty" %>
		<% end %>
		<div class="note">
			<% if @issue.user %>
				<%= link_to truncate(@issue.user.name, :length => 80), @issue.user %>,
			<% end %>
			<span class="timeago" title="<%= @issue.created_at.getutc.iso8601 %>">
				<%= time_ago_in_words @issue.created_at %> _password
			</span>
		</div>
		<br class="clear">

		<%= comments @issue %>
	</div>
	<div class="g1">&nbsp;</div>
	<div class="g3 ge">
		<h2><%=t '.themes' %></h2>
		<ul class="themes">
			<% for theme in @themes %>
			<li>
				<%= link_to theme.title, theme %><br>
			</li>
			<% end %>
		</ul>
		<br>
		<br>

		<% if @related.any? %>
		<h2><%=t '.related' %></h2>
		<ul>
			<% for issue in @related %>
			<li><%= link_to issue.title, issue %></li>
			<% end %>
		</ul>
		<br>
		<% end %>

	</div>
</div>

