<h2><%=t '.title' %></h2>
<table class="fullwidth">
	<% if @most_voted.any? %>
	<tr><th colspan=2><br><%=t '.most_votes' %></th>
	<% for issue in @most_voted %>
	<tr class="oneline">
		<td><%= link_to issue.title, issue %></td>
		<td><%= issue.votes_count %></td>
	</tr>
	<% end %>
	<% end %>

	<% if @most_commented.any? %>
	<tr><th colspan=2><br><%=t '.most_comments' %></th>
	<% for issue in @most_commented %>
	<tr class="oneline">
		<td><%= link_to issue.title, issue %></td>
		<td><%= issue.comments_count %></td>
	</tr>
	<% end %>
	<% end %>
</table>

<br>
<h2><%=t 'tags' %></h2>
<%= render 'tag_cloud' %>
