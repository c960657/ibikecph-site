//add comment
var comment = $("<%= escape_javascript(render(@comment)) %>");	//render
comment.find("span.timeago").timeago();	//start timeago updates

//insert
$(".comments table").append(comment).show(); 
//reset comment form
$("#new_comment_form")[0].reset();

//hide errors
$("#form_errors").hide();

//update follow button, in case we auto-followed
$("#follow").replaceWith("<%= escape_javascript(render(:partial => '/follows/follow', :locals => {:target => @comment.commentable})) %>");