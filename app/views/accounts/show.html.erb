<div class="g6">


<%= link_to t('edit'), [:edit,:account], :class => "button righty" %>
<h1><%=t '.title' %></h1>

<label><%=t '.name' %></label>
<p><%= current_user.name %></p>

<label><%=t '.image' %></label>
<p>
	<% if current_user.image? %>
		<%= image_tag current_user.image.g2.url, :class => 'g2 square' %>
	<% else %>
		(<%=t '.no_image' %>)
	<% end %>
</p>

<label><%=t '.about' %></label>
<% if current_user.about %>
	<%= simple_format(current_user.about) %>
<% else %>
	<p>(<%=t 'empty' %>)</p>
<% end %>


<hr>

<h1><%=t '.title_login' %></h1>

<% if current_user.authentications.emails.any? %>
<%= link_to t('.change_email'),new_email_path, :class => "note button righty" %>
<label><%=t '.email' %></label>
<p>
	<% for email in current_user.emails %>
		<%= email.address %>
		<% unless email.active? %>
			<span class="note">(<%= t('.unverified') %>)</span>
		<% end %>
		<br>
	<% end %>
</p>
<% end %>


<% if @has_password %>
<%= link_to t('.change_password'), edit_password_path, :class => "note button righty" %>
<label><%=t '.password' %></label>
<p>(<%=t '.password_hidden' %>)</p>
<% end %>


<hr>


<h1><%=t '.title_settings' %></h1>

<%= link_to t('.change_settings'),settings_account_path, :class => "note button righty" %>
<label><%=t '.notify_by_email' %></label>
<p>
	<%= current_user.notify_by_email ? t('on') : t('off') %>
</p>


</div>

