<div class="centered_dialog small">
	<h1><%=t '.title' %></h1>
	<%= errors_for( current_user ).html_safe %>
	<%= form_for current_user, :url => settings_account_path, :html => {:method => :post} do |f| %>
		<p>
			<%= f.check_box :notify_by_email %>
			<%=t '.email_notifications' %>
		</p>
		<p class="submits">
			<%= f.submit t('.submit') %>
			<%= link_to t('accounts.misc.cancel'), :back, :class => 'cancel' %>
		</p>
		
		<div class="tokens">
			<p><%= f.label :token_authentication_key %><br />
			<%= current_user.authentication_token.blank? ? "Token Empty" : current_user.authentication_token %></p>

			<p><%= link_to "Generate New Token", token_authentications_path(:user_id => current_user.id), :method => :post, :confirm => "Are you sure?"  %></p>
		</div>
	<% end %>
</div>


