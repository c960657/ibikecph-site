<h6>Resend Activation Email</h6>
<p>
	You can have your account activation email resent by filling out the form below.
</p>
		
<%= form_tag create_activation_path do %>
<p>
	<%= label_tag :email %><br>
	<%= text_field_tag :email, params[:email] %>
</p>
<p>
	<%= submit_tag "Resend", :class => :submit %>
</p>
<% end %>