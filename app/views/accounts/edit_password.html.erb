<div class="centered_dialog small">
	<h1><%=t '.title' %></h1>
	<%= form_for current_user, :url => update_password_path, :method => :put do |f| %>
	<%= errors_for( current_user ).html_safe %>
	<p>
		<%= f.label :current_password %><br>
		<%= password_field_tag :password, { :class => 'text_input' } %> <%= link_to t('.forgotten_q'),new_password_reset_path %>
	</p>
	<p>
		<%= f.label :password, t('.new_password') %><br>
		<%= f.password_field :password, { :class => 'text_input' } %>
	</p>
	<p>
		<%= f.label :new_password_confirmation %><br>
		<%= f.password_field :password_confirmation, { :class => 'text_input' } %>
	</p>
	<p class="submits">
		<%= f.submit t('.submit') %>
	</p>
	<% end %>
</div>